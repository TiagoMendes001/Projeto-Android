<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F397E"
    tools:context=".MenuNovoActivity">


    <TextView
        android:id="@+id/escolha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/alata"
        android:text="ESCOLHA A CATEGORIA"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/idIndo"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/melhorar"
        android:fontFamily="@font/alata"
        android:text="Confirmar"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/escolha">

        <RadioButton
            android:id="@+id/radioBook"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="LIVROS"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioLaps"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="NOTEBOOKS"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioCell"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="CELULARES"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioRoupa"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="ROUPAS"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioCalcado"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="CALÃ‡ADOS"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>