<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343957"
    tools:context=".CreateActivity">

    <TextView
        android:id="@+id/tvTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/alata"
        android:text="Crie uma Conta"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editNome"
        android:layout_width="300sp"
        android:layout_height="55sp"
        android:layout_marginTop="44dp"
        android:background="@drawable/melhorar"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:hint="Nome"
        android:textColorHint="@color/black"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle2" />

    <EditText
        android:id="@+id/editPass"
        android:layout_width="300sp"
        android:layout_height="55sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/melhorar"
        android:ems="10"
        android:maxLength="12"
        android:fontFamily="@font/alata"
        android:hint="Password"
        android:inputType="numberPassword"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editLocal" />

    <EditText
        android:id="@+id/editLocal"
        android:layout_width="300sp"
        android:layout_height="55sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/melhorar"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:hint="Address"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCpf" />

    <EditText
        android:id="@+id/editCpf"
        android:layout_width="300sp"
        android:layout_height="55sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/melhorar"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:hint="Cpf"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNome" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPass">

        <RadioButton
            android:id="@+id/rbCliente"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:hint="Cliente"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/rbAdm"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:fontFamily="@font/alata"
            android:hint="Administrador"
            android:textColorHint="@color/white"
            android:textSize="16dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/perguntaTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/alata"
        android:text="Selecione Um UsuÃ¡rio"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPass" />

    <Button
        android:id="@+id/botaoSalvar"
        android:layout_width="300sp"
        android:layout_height="45sp"
        android:layout_marginTop="25dp"
        android:background="@drawable/melhorar"
        android:fontFamily="@font/alata"
        android:text="Salvar"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />
</androidx.constraintlayout.widget.ConstraintLayout>